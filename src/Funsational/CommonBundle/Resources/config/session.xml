<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="funsational_common.session.storage.single_domain.class">Funsational\CommonBundle\SessionStorage\SingleDomainSessionStorage</parameter>
        <parameter key="funsational_common.session.storage.single_domain.entity.class">Funsational\CommonBundle\Entity\Session</parameter>
    </parameters>

    <services>
        <service id="session.storage.funsational_single_domain" class="%funsational_common.session.storage.single_domain.class%" public="false">
            <argument>%funsational_common.single_session.options%</argument>
            <argument type="service" id="security.context" />
            <argument type="service" id="service_container" />
            <argument>%funsational_common.session.storage.single_domain.class%</argument>
        </service>
    </services>
</container>
